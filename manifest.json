{
  "manifest_version": 3,
  "name": "ez-qrcode",
  "version": "1.1.0",
  "author": "your@email.com",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "ez-qrcode"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}